// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums for the application
enum UserRole {
  ME
  WIFE
}

enum Mood {
  GREAT
  GOOD
  OK
  LOW
}

enum TaskCategory {
  YOUTUBE
  BODHI_LEARN
  ECOMMERCE
  PRINTER
  WORK
  PERSONAL
}

enum TaskPriority {
  HIGH
  MEDIUM
  LOW
}

enum TaskStatus {
  BACKLOG
  TODAY
  IN_PROGRESS
  WAITING
  DONE
}

enum EstimatedTime {
  MIN15
  MIN30
  HOUR1
  HOUR2
  HOUR4
}

enum Owner {
  ME
  WIFE
}

enum ContentType {
  LONG_VIDEO
  SHORT
  REEL
}

enum ContentStatus {
  IDEA
  SCRIPTED
  RECORDED
  EDITING
  THUMBNAIL_READY
  SCHEDULED
  POSTED
}

enum BusinessType {
  CLOTHING
  PRINTING_3D
}

enum OrderStatus {
  NEW
  DESIGNING
  PRINTING
  PACKING
  DELIVERED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  PAID
}

// NextAuth required tables
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  role          UserRole  @default(ME)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  dailyTrackers DailyTracker[]
  tasks         Task[]
  content       Content[]
  business      Business[]
  weeklyPlans   WeeklyPlan[]
  goals         Goal[]
  habitStreaks  HabitStreak[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Daily Tracker Model
model DailyTracker {
  id            String    @id @default(cuid())
  date          DateTime  @unique
  day           String
  deepWorkDone  Boolean   @default(false)
  gymDone       Boolean   @default(false)
  contentDone   Boolean   @default(false)
  ecommerceDone Boolean   @default(false)
  printerDone   Boolean   @default(false)
  sleepBefore11 Boolean   @default(false)
  wake530       Boolean   @default(false)
  mood          Mood      @default(GOOD)
  notes         String?
  score         Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([date, userId])
  @@map("daily_trackers")
}

// Task Model
model Task {
  id            String        @id @default(cuid())
  title         String
  description   String?
  category      TaskCategory
  priority      TaskPriority  @default(MEDIUM)
  status        TaskStatus    @default(BACKLOG)
  dueDate       DateTime?
  estimatedTime EstimatedTime @default(HOUR1)
  owner         Owner         @default(ME)
  isRecurring   Boolean       @default(false)
  recurringFrequency String?   // DAILY, WEEKLY, MONTHLY
  lastRecurredAt DateTime?
  parentTaskId  String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  userId        String
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("tasks")
}

// Content Model
model Content {
  id           String        @id @default(cuid())
  title        String
  platforms     String[]
  type         ContentType
  status       ContentStatus @default(IDEA)
  shootDate    DateTime?
  publishDate  DateTime?
  videoLink    String?
  scriptLink   String?
  remarks      String?
  owner        Owner         @default(ME)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  userId       String
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("content")
}

// Business Model
model Business {
  id           String         @id @default(cuid())
  customerName String
  businessType BusinessType
  orderStatus  OrderStatus    @default(NEW)
  orderDate    DateTime       @default(now())
  deliveryDate DateTime?
  amount       Float
  cost         Float
  profit       Float          @default(0)
  paymentStatus PaymentStatus @default(PENDING)
  handledBy    Owner          @default(ME)
  notes        String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  userId       String
  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  auditHistory BusinessAudit[]

  @@map("business")
}

// Business Audit History Model
model BusinessAudit {
  id          String      @id @default(cuid())
  businessId  String
  business    Business    @relation(fields: [businessId], references: [id], onDelete: Cascade)
  oldStatus   OrderStatus?
  newStatus   OrderStatus
  changedBy   Owner
  notes       String?
  createdAt   DateTime    @default(now())

  @@map("business_audit")
}

// Weekly Plan Checklist Model
model WeeklyPlan {
  id          String   @id @default(cuid())
  date        String   // Format: YYYY-MM-DD
  dayOfWeek   String   // SUNDAY, MONDAY, TUESDAY, etc.
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Daily Non-Negotiables (Must Do Every Day)
  deepWorkDone      Boolean @default(false)
  contentWorkDone   Boolean @default(false)
  gymWalkDone       Boolean @default(false)
  sleepBefore11     Boolean @default(false)
  wake530           Boolean @default(false)
  
  // Day-Specific Tasks (based on weekly plan)
  morningTaskDone   Boolean @default(false)  // 5:45-7:15 AM deep work task
  eveningTaskDone   Boolean @default(false)  // 8:15-10:15 PM light work task
  fitnessTaskDone   Boolean @default(false)  // 6:15-7:15 PM fitness/recovery
  
  // Notes and Planning
  morningTaskDesc   String?  // What was the morning deep work task
  eveningTaskDesc   String?  // What was the evening task
  notes             String?  // Any additional notes
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([date, userId])
  @@map("weekly_plans")
}

// Goal Setting Model
model Goal {
  id            String   @id @default(cuid())
  title         String
  description   String?
  category      GoalCategory
  targetValue   Float
  currentValue  Float    @default(0)
  unit          String   // subscribers, revenue, kg, videos, etc.
  deadline      DateTime
  status        GoalStatus @default(IN_PROGRESS)
  priority      TaskPriority @default(MEDIUM)
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  sharedWith    Owner?   // Share with WIFE for accountability
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("goals")
}

enum GoalCategory {
  CONTENT
  BUSINESS
  HEALTH
  PERSONAL
  LEARNING
}

enum GoalStatus {
  IN_PROGRESS
  COMPLETED
  PAUSED
  CANCELLED
}

// Habit Streak Model
model HabitStreak {
  id              String   @id @default(cuid())
  habitName       String   // Deep Work, Gym, Content, etc.
  currentStreak   Int      @default(0)
  longestStreak   Int      @default(0)
  lastCompletedAt DateTime?
  totalCompletions Int     @default(0)
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([habitName, userId])
  @@map("habit_streaks")
}

// Accountability Share Model (for wife partnership)
model AccountabilityShare {
  id          String   @id @default(cuid())
  fromUserId  String   // Who is sharing
  toUserId    String   // Who it's shared with (wife)
  shareType   ShareType
  itemId      String   // ID of goal, task, or tracker
  message     String?
  reaction    String?  // Wife's reaction/encouragement
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("accountability_shares")
}

enum ShareType {
  GOAL
  TASK
  DAILY_TRACKER
  WEEKLY_PLAN
  ACHIEVEMENT
}
